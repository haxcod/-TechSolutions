{
  "name": "haxcod-website",
  "version": "1.0.0",
  "description": "Haxcod Inc - Modern IT Services Website built with Next.js and Tailwind CSS",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "clean": "rimraf .next",
    "build": "npm run clean && next build && npm run copy-standalone",
    "copy-standalone": "xcopy \".next\\static\" \".next\\standalone\\.next\\static\" /E /I /Y",
    "start": "node .next/standalone/server.js",
    "start:prod": "NODE_ENV=production node .next/standalone/server.js",
    "lint": "next lint",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "cross-env ANALYZE=true npm run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/nodemailer": "^7.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "next-seo": "^6.4.0",
    "nodemailer": "^7.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "sharp": "^0.34.4",
    "swiper": "^12.0.2",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.23",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "nextjs",
    "tailwind",
    "haxcod",
    "it-services",
    "website"
  ],
  "author": "Haxcod Inc Team",
  "license": "MIT"
}
